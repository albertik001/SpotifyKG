<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <TextView
        android:id="@+id/number_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/text_music"
        android:layout_width="126dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/number_music"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Blank Space" />

    <TextView
        android:id="@+id/music_name"
        android:layout_width="126dp"
        android:layout_height="18dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text_music"
        app:layout_constraintTop_toBottomOf="@+id/text_music"
        tools:text="Taylor Swift" />

    <TextView
        android:id="@+id/time_music"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/number_music"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3:22" />
</androidx.constraintlayout.widget.ConstraintLayout>